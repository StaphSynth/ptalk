<%= form_for(@message, remote: true) do |f| %>

  <%= f.hidden_field :user_id, value: current_user.id if current_user %>
  <%= f.hidden_field :channel_id, value: @channel.id %>

  <div class="form-group">
    <%= f.text_area :content %>
  </div>

  <div class="form-group">
    <%= f.submit 'Post' %>
  </div>
<% end %>
